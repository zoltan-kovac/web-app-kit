{
  "name": "web-app-kit",
  "version": "1.0.0",
  "description": "webpack 3 starter kit for web application",
  "scripts": {
    "start": "npm run build:dev && npm run serve",
    "prebuild:dev": "npm run clean:build",
    "build:dev": "NODE_ENV=development npm run build:js && npm run build:styles",
    "postbuild:dev": "cp 'src/tpl/index.html' 'dist'",
    "build:js": "webpack --config 'config/webpack.config.js' --hot --profile --progress --colors --display-cached",
    "build:styles": "node-sass 'src/styles/app.scss' 'dist/css/app.css' && npx postcss dist/css/*.css --use autoprefixer -d 'dist/css/'",
    "serve": "nodemon",
    "serve:dva": "nodemon --config 'config/nodemon.congif.js' && browser-sync start --config 'config/browser-sync.config.js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:build": "rm -rf 'dist'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoltan-kovac/web-app-kit.git"
  },
  "author": "Zoltan Kovac",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zoltan-kovac/web-app-kit/issues"
  },
  "homepage": "https://github.com/zoltan-kovac/web-app-kit#readme",
  "dependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.23.6",
    "loadash": "^1.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.15.0",
    "postcss-cli": "^5.0.0",
    "webpack": "^3.10.0"
  }
}
